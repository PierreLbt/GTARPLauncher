<Window x:Class="MyServerLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MY SERVER Launcher" Height="450" Width="600" ResizeMode="NoResize">

    <DockPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="0" Grid.Column="0">
                <WrapPanel>
                    <TextBlock Margin="20,0,5,0">Votre chemin fivem : </TextBlock>
                    <TextBlock Name="Path"></TextBlock>
                </WrapPanel>
                <Button Margin="20,10" Click="ButtonFindClick">Parcourir</Button>
            </StackPanel>
            <Button Grid.Row="0" Grid.Column="1" Margin="50" Click="BtnCacheClick">VIDER LE CACHE</Button>
            <Button Name="Play" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="50" Click="ButtonPlayClick">JOUER</Button>
        </Grid>
    </DockPanel>
    
</Window>
